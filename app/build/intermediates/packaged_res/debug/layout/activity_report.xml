<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ReportActivity">

    <CheckBox
        android:id="@+id/cb_soup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chocolate_soup" />

    <CheckBox
        android:id="@+id/cb_sprinkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sprinkle" />

    <CheckBox
        android:id="@+id/cb_crush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crushed_nuts" />

    <CheckBox
        android:id="@+id/cb_cherries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cherries" />

    <CheckBox
        android:id="@+id/cb_cookies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cookies" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showToast"
        android:text="@string/show_toast" />
</LinearLayout>